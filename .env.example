# ================================
# Project Migration Automation System
# Environment Variables Template
# ================================
# Copy this file to .env and fill in your actual values
# Run: cp .env.example .env

# ================================
# GENERAL SETTINGS
# ================================
COMPOSE_PROJECT_NAME=msa-project
NODE_ENV=development
TZ=Asia/Seoul

# ================================
# FRONTEND (Next.js)
# ================================
# Next.js Server
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_AI_API_URL=http://localhost:8000
FRONTEND_PORT=3000

# ================================
# BACKEND - Spring Boot API
# ================================
# Server Configuration
SPRING_PORT=8080
SPRING_PROFILE=dev

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=msa_database
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# JWT (if applicable)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=86400000

# ================================
# BACKEND - Python AI Server (FastAPI)
# ================================
# Server Configuration
PYTHON_AI_PORT=8000
FASTAPI_ENV=development

# AI Model Paths
YOLO_MODEL_PATH=/app/models/yolov8n.pt
WHISPER_MODEL_PATH=/app/models/whisper-base
OCR_MODEL_PATH=/app/models/easyocr

# AI Processing Settings
MAX_IMAGE_SIZE=10485760
MAX_AUDIO_LENGTH=300
ENABLE_GPU=false

# API Keys (if needed)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ================================
# DATABASE (MySQL)
# ================================
MYSQL_ROOT_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=msa_database
MYSQL_PORT=3306

# ================================
# MONITORING & LOGGING (Optional)
# ================================
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Log Level
LOG_LEVEL=INFO

# ================================
# BACKUP SETTINGS
# ================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# ================================
# SECURITY
# ================================
# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ================================
# DEVELOPMENT SETTINGS (dev only)
# ================================
# Hot Reload
ENABLE_HOT_RELOAD=true

# Debug Ports
DEBUG_SPRING_PORT=5005
DEBUG_PYTHON_PORT=5678

# ================================
# PRODUCTION SETTINGS (prod only)
# ================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# ================================
# NOTES
# ================================
# 1. Never commit .env file to version control
# 2. Always use strong passwords in production
# 3. Update API keys regularly
# 4. Enable SSL/TLS in production
# 5. Set NODE_ENV=production for production builds
